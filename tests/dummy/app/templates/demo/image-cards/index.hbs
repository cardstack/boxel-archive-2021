<div class="image-cards-page">
  <AnimatedContainer class="image-cards-list">
    {{#animated-each this.model key="id" group="image-card" use=this.transition as |card|}}
      <div class="image-card image-card-{{card.id}}" role="button" onclick={{action "toggle" card}}>
        {{#if card.image}}
          <div class="image-card--inner">
            {{#animated-value card key="id" group="image" use=this.imageTransition as |card|}}
              <div class="image-card--header-image">
                {{! template-lint-configure no-inline-styles {"allowDynamicStyles": true} }}
                <div class="header-image" style={{css-url "background-image" card.image}} />
              </div>
            {{/animated-value}}
            <div class="header">
              {{#animated-value card key="id" group="header content" use=this.headerTransition}}
                <div>
                  <div class="title">{{card.title}}</div>
                  <div class="credit">Photo by {{card.imageCredit}}</div>
                </div>
              {{/animated-value}}
            </div>
          </div>
        {{/if}}
      </div>
    {{/animated-each}}
  </AnimatedContainer>
</div>