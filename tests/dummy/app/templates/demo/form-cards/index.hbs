<AnimatedContainer>
  {{#animated-value "form-cards-route" initialInsertion=true finalRemoval=true use=this.wait}}
    <div class="form-cards-page">
      <AnimatedContainer>
        {{#animated-value "form-cards-index-route" initialInsertion=true finalRemoval=true use=this.backgroundTransition}}
          <div class="form-cards-list">
            {{#animated-each model key="id" group="form-card" as |card|}}
              <div role="button" {{action "edit" card}} class="form-card form-card-{{card.id}}">
                {{#animated-value card key="id" group="form-card--shadow" use=this.shadowTransition}}
                  <div class="form-card--shadow" />
                {{/animated-value}}
              </div>
            {{/animated-each}}
          </div>
        {{/animated-value}}
      </AnimatedContainer>
    </div>
  {{/animated-value}}
</AnimatedContainer>