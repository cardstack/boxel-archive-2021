<div class="form-cards-page">
  <AnimatedContainer class="form-cards-list">
    {{#animated-each model key="id" watch="expanded" use=this.transition as |card|}}
      <Boxel @name="boxel-{{card.id}}" class="form-card form-card-{{card.id}} {{if card.selected "focused"}} {{if this.expandedCards.length "expanded"}}" role="button" onclick={{action "edit" card}}>
      </Boxel>
    {{/animated-each}}
  </AnimatedContainer>
</div>

{{outlet}}