<header class="tools-header">
  <button {{on "click" this.preview}}>Preview</button>
  <button {{on "click" this.save}}>Save</button>
</header>

<div class="tools-edit">
  <Boxel @name={{concat model.modelName "-new"}} @variant="large">
    <div class="tools-edit--image-preview">
      {{! template-lint-configure no-inline-styles {"allowDynamicStyles": true} }}
      <div class="tools-edit--image-url" style={{backgroundImageUrl}} />
    </div>
    <div class="tools-edit--fields">
      <TextField @value={{model.title}} @label="Title" /><br>
      <TextField @value={{model.description}} @label="Description" /><br>
      <TextArea @value={{model.body}} @label="Body" /><br>
    </div>
  </Boxel>
</div>