<header class="catalog tools-header">
  <button {{action "preview"}} class="btn-preview" data-test-tools-button-preview>Preview</button>
  <button {{action "save"}} class="btn-preview" data-test-tools-button-save>Save</button>
</header>

<div class="tools-edit">
  <Article @name="{{this.model.constructor.modelName}}-new" class="tools-edit--boxel">
    <div class="tools-edit--image-container">
      {{! template-lint-configure no-inline-styles {"allowDynamicStyles": true} }}
      <div class="tools-edit--image" style={{this.backgroundImageUrl}} />
    </div>
    <div class="tools-edit--fields-container">
      <BoxelField @component="text-field" @value={{this.model.title}} @label="Title" />
      <BoxelField @component="text-field" @value={{this.model.description}} @label="Description" />
      <BoxelField @component="text-area" @value={{this.model.body}} @label="Body" />
    </div>
  </Article>
</div>