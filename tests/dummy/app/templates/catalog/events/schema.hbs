<div class="event-schema">
  <div class="event-schema--container">
    <AnimatedContainer>
      <div class="event-schema--outer {{if this.model.selected "selected"}}">
        <div class="event-schema--container-content">
          <div><span>Schema:</span> {{this.model.constructor.modelName}} Card</div>
          {{! template-lint-configure no-nested-interactive false}}
          <ViewModeNav @model={{model}} />
        </div>

        {{#animated-value this.model use=this.trayAnimation key="id" group="tray" as |card|}}
          <div class="event-schema--tray {{if card.selected "selected"}}">
            <div class="event-schema--inner">
              <AnimatedContainer>
                {{#animated-value card key="id" group=(concat "card-" card.id) use=this.cardTransition}}
                  {{!-- Card content --}}
                  <div class="event-schema-card event-schema-card-{{card.id}}">
                    {{! template-lint-configure no-inline-styles {"allowDynamicStyles": true} }}
                    <AnimatedContainer>
                      {{#animated-value card key="id" group=(concat "image-" card.id) use=this.imageTransition}}
                        <div class="event-schema-image" style={{css-url "background-image" card.imageUrl}}></div>
                      {{/animated-value}}
                    </AnimatedContainer>
                    <AnimatedContainer class="event-schema-details">
                      {{#animated-value card key="id" group=(concat "header-" card.id) use=this.headerTransition}}
                        <div>
                          <div class="event-schema-details--header">
                            <div class="event-schema-date">{{moment-format card.datetime "ddd, MMM Do ha"}}</div>
                            <AnimatedContainer>
                              {{#animated-value card group="title" use=this.tweenTitle}}
                                <div class="event-schema-title">{{card.title}}</div>
                              {{/animated-value}}
                            </AnimatedContainer>
                          </div>
                          <div>
                            <div class="event-schema-location">{{card.location}}</div>
                            <div class="event-schema-price">{{card.price}}</div>
                          </div>
                        </div>
                      {{/animated-value}}
                    </AnimatedContainer>
                    <AnimatedContainer>
                      {{#animated-value card group=(concat "body-" card.id) use=this.bodyTransition}}
                        <div class="event-view--main">
                          <div class="event-view--info-group">
                            {{!-- <TextField @label="Title" @value={{card.title}} @mode="schema" @required={{true}} /> --}}
                            <BoxelField @value={{card.title}} @fieldName="title" @label="Title" @model={{card}} @mode="schema" @transition={{this.fieldTransition}}/>
                          </div>
                          <div class="event-view--info-group">
                            {{!-- <DatePicker @label="Date & Time" @selected={{card.datetime}} @mode="schema" @required={{true}} /> --}}
                            <BoxelField @value={{card.datetime}} @componentName="date-picker" @fieldName="datetime" @label="Date & Time" @model={{card}} @mode="schema" @transition={{this.fieldTransition}}/>
                          </div>
                          <div class="event-view--info-group">
                            <BoxelField @value={{card.location}} @fieldName="location" @label="Location" @model={{card}} @mode="schema" @transition={{this.fieldTransition}}/>
                          </div>
                          <div class="event-view--info-group">
                            <BoxelField @value={{card.description}} @fieldName="description" @label="Description" @model={{card}} @mode="schema" @transition={{this.fieldTransition}}/>
                          </div>
                          <div class="event-view--info-group">
                            <BoxelField @value={{card.body}} @componentName="text-area" @fieldName="body" @label="Body" @model={{card}} @mode="schema" @transition={{this.fieldTransition}}/>
                            {{!-- <TextArea @label="Body" @value={{card.body}} @mode="schema" @required={{true}} /> --}}
                          </div>
                        </div>
                      {{/animated-value}}
                    </AnimatedContainer>
                  </div>
                  {{!-- End of card content --}}
                {{/animated-value}}
              </AnimatedContainer>
            </div>
          </div>
        {{/animated-value}}

      </div>
    </AnimatedContainer>

    <div class="right-edge--container">
      <div class="right-edge">
        <div class="right-edge--title">
          {{this.model.constructor.modelName}} Card
        </div>
        <div class="right-edge--properties">
          <div>Properties:</div>
          <div>
            <label>Configure</label>
            <input type="text">
          </div>
          <div>
            <label>Configure</label>
            <input type="text">
          </div>
          <div>
            <label>Configure</label>
            <input type="text">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>