<div class="collection__wrapper">
  <div class="breadcrumbs">
    <LinkTo @route="media-registry" @class="breadcrumbs__pill">Master Recordings</LinkTo>
    <span class="breadcrumbs__carot" />
    <span class="breadcrumbs__pill breadcrumbs__pill--current">{{titleize (humanize @model.title)}}</span>
  </div>

  <IsolatedCollection
    @mode="view"
    @model={{@model}}
    @format="table"
    @displayHighlightActions={{true}}
    @transition={{this.transitionToIsolate}}
    @transitionToEdit={{this.transitionToEdit}}
    @transitionToView={{this.transitionToView}}
    @sort={{this.sort}}
    @search={{this.search}}
    @removeItem={{this.removeItem}}
    @itemComponent="cards/master-collection-item"
  />
</div>

{{outlet}}