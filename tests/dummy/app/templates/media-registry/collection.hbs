<div class="collection__wrapper">
  <Breadcrumbs>
    <AnimatedContainer>
      {{#animated-value this.target.currentRoute.parent.parent.params.id}}
        <LinkTo @route="media-registry" @class="breadcrumbs__item">
          <div class="breadcrumbs__item-label">Collection</div>
          <div class="breadcrumbs__item-title">Master Recordings</div>
        </LinkTo>
      {{/animated-value}}
    </AnimatedContainer>
  </Breadcrumbs>

  {{#animated-value @model key="id" use=this.transition}}
    <IsolatedCollection
      @mode="view"
      @model={{@model}}
      {{!-- @format="table" --}}
      @displayHighlightActions={{true}}
      @transition={{this.transitionToIsolate}}
      @transitionToEdit={{this.transitionToEdit}}
      @transitionToView={{this.transitionToView}}
      @sort={{this.sort}}
      @search={{this.search}}
      @removeItem={{this.removeItem}}
      @itemComponent="cards/master-collection-item"
    />
  {{/animated-value}}
</div>

{{outlet}}