<div class="master-collection__wrapper">
  <IsolatedCollection
    @mode="view"
    @model={{@model}}
    @transition={{this.transitionToIsolate}}
    @transitionToEdit={{this.transitionToEdit}}
    @transitionToView={{this.transitionToView}}
    @sort={{this.sort}}
    @search={{this.search}}
    @removeItem={{this.removeItem}}
    @itemComponent="cards/master-collection"
  />
</div>

