<div class="event--container-content--nav">
  <button class="btn-done" {{action @viewGridPage}}>Done</button>
  <button class="btn-more" {{action "toggleModeMenu"}}></button>
  {{#if this.showModeMenu}}
    <div class="mode-menu">
      <nav>
        <ul>
          <li><LinkTo @route="catalog.events.view" @model={{@model}}>View as Layout</LinkTo></li>
          <li><LinkTo @route="catalog.events.edit" @model={{@model}}>View as Form</LinkTo></li>
          <li><LinkTo @route="catalog.events.schema" @model={{@model}}>View as Schema</LinkTo></li>
        </ul>
      </nav>
    </div>
  {{/if}}
</div>