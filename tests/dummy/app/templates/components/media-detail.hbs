{{#each this.detailSections as |s|}}
  <section class="media-detail-section media-detail-section--{{@mode}}">
    <h3 class="media-detail-section__title">{{s.title}}</h3>
    <div class="media-detail-section__contents">
      {{#each s.content as |field|}}
        <FieldRenderer
          @mode={{@mode}}
          @field={{field}}
          @fieldName={{field.title}}
        />
      {{/each}}
    </div>
  </section>
{{/each}}