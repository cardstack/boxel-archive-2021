<Boxel::Dashboard
  @darkTheme={{true}}
  @displayLeftEdge={{true}}
>
  <:left-edge>
    <CardHost::LeftEdgeNav
      @home={{hash icon="cardstack-logo" width="33px" height="35px"}}
    />
  </:left-edge>

  <:header>
    <Boxel::OrgHeader @title="Cardstack">
      <Boxel::Button @kind="secondary-dark">
        Connect Account
      </Boxel::Button>
    </Boxel::OrgHeader>
  </:header>

  <:body>
    <section>
      <h2>Join an Org</h2>
      <ul>
        {{#each @model.orgs as |org|}}
          <li>
            {{#if org.url}}
              <LinkTo @route={{org.url}}>
                {{org.title}}
              </LinkTo>
            {{else}}
              {{org.title}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </section>
  </:body>

</Boxel::Dashboard>