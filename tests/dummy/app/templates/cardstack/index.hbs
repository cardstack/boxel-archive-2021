<Boxel::Dashboard
  {{did-insert (fn this.updateEdges)}}
  @darkTheme={{true}}
  data-test-cardstack-dashboard
>
  <:body>
  <div class="cardstack-container">
    <div class="cardstack-section-header">
    <h2 class="cardstack-section-header__title" data-test-cardstack-dashboard-header>
      Cardstack
    </h2>
    {{#unless this.cardstackSession.isAuthenticated}}
    <Boxel::Button
      {{!-- @kind={{if this.edges.darkTheme "secondary-dark" "secondary-light"}} --}}
      @kind="secondary-dark"
      @size="tall"
      {{on "click" this.cardstackSession.login}}
      data-test-cardstack-login-button
    >
      Connect Account
    </Boxel::Button>
    {{/unless}}
    </div>
   {{!-- <Boxel::OrgHeader @title="Cardstack" data-test-cardstack-dashboard-header /> --}}
   <div class="cardstack-landing-hero">
     <div class="cardstack-landing-hero__content-container">
       <img src={{@model.logo}} alt="" role="presentation" class="cardstack-landing-hero__logo">
       <h2 class="cardstack-landing-hero__title">CARDSTACK</h2>
       <span class="cardstack-landing-hero__description">The worldâ€™s first cooperative SaaS platform. </span>
       <span class="cardstack-landing-hero__description">Own the platform. Choose the tools. Work your way.</span>
       <a href="#" class="cardstack-landing-hero__cta">
         Learn more {{svg-jar "caret-thin-right" class="cardstack-landing-hero__cta-icon"}}
       </a>
     </div>
   </div>
    <section>
      <div class="cardstack-section-header">
        <h2 class="cardstack-section-header__title">Join an Org</h2>
      </div>
      <ul class="cardstack-org-grid">
        {{#each @model.orgs as |org|}}
        <li>
          {{#let (link org.route) as |l|}}
            <OrgCard
              @org={{org}}
              @onClickCta={{if org.route l.transitionTo noop}}
            />
          {{/let}}
        </li>
        {{/each}}
      </ul>
    </section>
    </div>
  </:body>
</Boxel::Dashboard>