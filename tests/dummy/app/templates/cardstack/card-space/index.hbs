<Boxel::Dashboard
  @darkTheme={{true}}
  @displayLeftEdge={{true}}
>
  <:left-edge>
    <CardHost::LeftEdgeNav
      @home={{hash icon="cardstack-logo" width="33px" height="35px"}}
    />
  </:left-edge>

  <:header>
    <Boxel::OrgHeader>
      <Boxel::Searchbox
        @id="card-space-search-bar"
        @label="Search Card Space"
        @placeholder="Search Card Space"
      />
      <Boxel::Button @kind="secondary-dark">
        Connect Account
      </Boxel::Button>
    </Boxel::OrgHeader>
  </:header>

  <:body>
    <Boxel::Button @kind="primary" {{on "click" this.transitionToSpace}}>
      Create Space
    </Boxel::Button>
  </:body>
</Boxel::Dashboard>