<Boxel::Dashboard
  {{did-insert (fn this.updateEdges)}}
  @darkTheme={{true}}
  data-test-card-space-dashboard
>
  <:header>
    <Boxel::OrgHeader @title="Card Space" />
    {{#unless this.cardstackSession.isAuthenticated}}
      <Boxel::Button
        class="card-space-login-button"
        @kind="secondary-dark"
        @size="tall"
        {{on "click" this.cardstackSession.login}}
      >
        Connect Account
      </Boxel::Button>
    {{/unless}}
  </:header>
  <:body>
    <Boxel::Button
      @kind="primary"
      {{on "click" this.transitionToSpace}}
      data-test-card-space-create-button
    >
      Create Space
    </Boxel::Button>
  </:body>
</Boxel::Dashboard>