<Boxel::Modal
  @isOpen={{true}}
  @onClose={{this.transitionToDashboard}}
  class={{cn
    "boxel-thread-modal"
    boxel-thread-modal--full-width=this.expanded
  }}
>
  <CardPay::WorkflowThread
    @title={{this.model.workflow.title}}
    @milestones={{this.model.workflow.milestones}}
    @workflowBot={{this.model.workflowBot}}
    @participants={{this.model.participants}}
    @orgParticipants={{this.model.orgRepresentatives}}
    @expanded={{this.expanded}}
    @toggleExpand={{this.toggleExpand}}
  />
</Boxel::Modal>