<Boxel::Dashboard class="card-pay-dashboard">
  <:header>
    <CardPay::Header
      @title={{@title}}
      @logoURL={{@logo}}
    />
    {{!-- TODO: navbar component (also see MediaRegistry::DashboardCard) --}}
    <nav class="card-pay-header__nav">
      <ul class="card-pay-header__nav-list">
        <li>
          <LinkTo @route="cardstack.card-pay" class="card-pay-header__nav-tab selected">
            <span class="card-pay-header__nav-tab-icon" />
            Card Balances
          </LinkTo>
        </li>
        <li>
          <LinkTo @route="cardstack.card-pay" class="card-pay-header__nav-tab">
            Merchant Services
          </LinkTo>
        </li>
        <li>
          <LinkTo @route="cardstack.card-pay" class="card-pay-header__nav-tab">
            Reward Programs
          </LinkTo>
        </li>
        <li>
          <LinkTo @route="cardstack.card-pay" class="card-pay-header__nav-tab">
            Token Suppliers
          </LinkTo>
        </li>
      </ul>
    </nav>
  </:header>

  <:body>
    <ul>
      <li>
        <LinkTo @route="cardstack.card-pay.workflow" @model="prepaid-card-issuance">Issue new Prepaid Card</LinkTo>
      </li>
      <li>
        <LinkTo @route="cardstack.card-pay.workflow" @model="reserve-pool-deposit">Deposit Into Reserve Pool</LinkTo>
      </li>
      <li>
        <LinkTo @route="cardstack.card-pay.workflow" @model="prepaid-card-transfer">Transfer Prepaid Card</LinkTo>
      </li>
    </ul>
  </:body>
</Boxel::Dashboard>