<Boxel::Dashboard class="card-pay-dashboard">
  <:header>
    <CardPay::Header
      @title={{@title}}
      @logoURL={{@logo}}
    />
  </:header>

  <:body>
    <ul>
      <li>
        <LinkTo @route="card-pay.workflow" @model="prepaid-card-issuance">Issue new Prepaid Card</LinkTo>
      </li>
      <li>
        <LinkTo @route="card-pay.workflow" @model="reserve-pool-deposit">Deposit Into Reserve Pool</LinkTo>
      </li>
      <li>
        <LinkTo @route="card-pay.workflow" @model="prepaid-card-transfer">Transfer Prepaid Card</LinkTo>
      </li>
    </ul>
  </:body>
</Boxel::Dashboard>