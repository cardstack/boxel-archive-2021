<Freestyle::Usage @name="SuggestedNextStepsBox">
  <:example>
    <CardPay::SuggestedNextStepsBox class="usage-suggested-next-steps-box">
      <:body as |BodyButton|>
        {{#each this.nextSteps as |item|}}
          <BodyButton @as="anchor" @href={{item.href}}>
            {{item.text}}
          </BodyButton>
        {{/each}}
      </:body>
      <:footer as |FooterButton|>
        <FooterButton @as="anchor" @href={{this.toHome.href}}>
          {{this.toHome.text}}
        </FooterButton>
      </:footer>
    </CardPay::SuggestedNextStepsBox>
  </:example>

  <:api as |Args|>
  <Args.Yield
    @name="body"
    @description="The body content of the comoponent. This yields a button. Content is placed a cluster layout (flex-wrap)."
  />
  <Args.Yield
    @name="footer"
    @description="The footer content of the comoponent that yields a secondary button."
  />
  </:api>
</Freestyle::Usage>