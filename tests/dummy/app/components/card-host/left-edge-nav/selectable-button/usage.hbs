<Freestyle::Usage
  @name="LeftEdgeNav::SelectableButton"
>
  <:example>
    <Doc::DemoStage @width="80px" @paddingX="0px" @textAlign="center" @bg="boxel-purple-800">
      <CardHost::LeftEdgeNav::SelectableButton
        @isSelected={{this.isSelected}}
      >
        <div
          class={{cn "boxel-org-switcher-button__logo boxel-org-switcher-button__logo--warner-music-group"}}
          style={{html-safe (concat (css-url "background-image" this.wmgLogo) "; background-repeat:no-repeat")}}
        />
      </CardHost::LeftEdgeNav::SelectableButton>
    </Doc::DemoStage>
  </:example>
  <:api as |Args|>
    <Args.Bool
      @name="isSelected"
      @value={{this.isSelected}}
      @description="when true, renders in selected state"
      @defaultValue={{false}}
      @onInput={{fn (mut this.isSelected)}}
    />
    <Args.Yield @optional={{true}} @description="The content of the button." />
  </:api>
</Freestyle::Usage>
