<div class="wave-player">
  <button onclick={{perform this.playPause}} class="wave-player__play">
    {{svg-jar "play-btn-black" width="50px" height="50px"}}
  </button>
  <canvas {{did-insert this.setupPlayer}}
    role="button"
    width={{this.width}} height={{this.height}} style={{this.style}}
    onclick={{this.canvasClick}}
    >
  </canvas>

  <div class="wave-player__times">
    {{media-duration this.currentTime}} / {{media-duration this.duration}}
  </div>
</div>