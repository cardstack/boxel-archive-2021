<Card
  @model={{@model}}
  @mode={{@mode}}
  @status={{@status}}
>
  <FieldRenderer @class="publishing-representation__field" @field={{hash title="writer" value=@model.writer type="card" component="cards/composer"}} @mode="view" />
  <FieldRenderer @class="publishing-representation__field" @field={{hash title="role" value=@model.role}} @mode="view" />
  <FieldRenderer @class="publishing-representation__field" @field={{@model.publisher}} @mode="view" />
</Card>