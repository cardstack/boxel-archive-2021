<Card
  @class="publishing-representation"
  @model={{@model}}
  @mode={{@mode}}
  @status={{@status}}
  @drillDown={{@drillDown}}
  @fieldData={{@fieldData}}
  @comparisonType={{@comparisonType}}
>
  <div class="publishing-representation__writers">
    <FieldRenderer @class="publishing-representation__field" @field={{hash title="writer" value=(if (and (eq @mode "comparison") @model.writer.tempItem) @model.writer.tempItem @model.writer) type="card" component="cards/composer"}} @mode="view" />
    <FieldRenderer @class="publishing-representation__field publishing-representation__additional-field" @field={{hash title="role" value=@model.role}} @mode="view" />
  </div>
  <div class="publishing-representation__publishers">
    <FieldRenderer @class="publishing-representation__field" @field={{@model.publisher}} @mode="view" />
  </div>
</Card>