<div class="media-collection-dropdown-btn {{@class}}">
  <BasicDropdown @this.verticalPosition="below" @renderInPlace={{true}} as |dd|>
    <dd.Trigger>
      <button class="media-collection-dropdown-btn__trigger {{@button}}" aria-label={{@button}}>
        {{#if @icon}}
          {{svg-jar @icon width="16px" height="16px"}}
        {{/if}}
      </button
    ></dd.Trigger>
    <dd.Content class="media-collection-dropdown-btn__dropdown">
      {{yield}}
    </dd.Content>
  </BasicDropdown>
</div>