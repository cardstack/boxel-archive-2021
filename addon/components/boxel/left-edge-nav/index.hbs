<div class="boxel-left-edge-nav" data-test-left-edge-nav ...attributes>
  <ul class="boxel-left-edge-nav__top-btn-group">
    {{#if @home}}
      <li>
        <Boxel::LeftEdgeNav::BasicButton aria-label="home" {{on "click" (optional @home.action)}}>
          {{svg-jar @home.icon width=@home.width height=@home.height}}
        </Boxel::LeftEdgeNav::BasicButton>
      </li>
    {{/if}}
    {{#if @user}}
      <li>
        <Boxel::LeftEdgeNav::BasicButton aria-label={{concat @user.title " profile"}} {{on "click" @user.action}}>
          <div class="boxel-left-edge-nav__user-icon" style={{css-url "background-image" @user.imgURL}}>
            {{#unless @user.imgURL}}
              {{truncate @user.title 1 false}}
            {{/unless}}
          </div>
        </Boxel::LeftEdgeNav::BasicButton>
      </li>
    {{/if}}
  </ul>

  <Boxel::OrgSwitcher
    class="boxel-left-edge-nav__middle-btn-group"
    @orgs={{@orgs}}
    @currentOrg={{@currentOrg}}
    @ariaLabel={{@ariaLabel}}
    @onChooseOrg={{@onChooseOrg}}
  />

  <ul class="boxel-left-edge-nav__bottom-btn-group">
    {{#if @bottomActions}}
      {{#each @bottomActions as |bottomAction|}}
        <li>
          <Boxel::LeftEdgeNav::CardManagementButton aria-label={{bottomAction.icon}} @iconOnly={{true}} {{on "click" bottomAction.action}}>
            {{svg-jar bottomAction.icon width="20px" height="20px"}}
          </Boxel::LeftEdgeNav::CardManagementButton>
        </li>
      {{/each}}
    {{/if}}
  </ul>
</div>