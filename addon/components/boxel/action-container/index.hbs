<article class={{cn "action-container" action-container--is-complete=@isComplete}}
  ...attributes
>
  <Boxel::Header @noBackground={{true}} class="action-container__header">
    {{@header}}
  </Boxel::Header>

  {{#if @prompt}}
    <p class="action-container__prompt">
      {{@prompt}}
    </p>
  {{/if}}

  {{yield}}

  <Boxel::ActionChin
    @mode={{if @isComplete 'memorialized' 'data-entry'}}
    @buttonText={{if @isComplete @completeActionLabel @incompleteActionLabel}}
    @onClickButton={{@onClickButton}}
    class="action-container__footer"
  />
</article>