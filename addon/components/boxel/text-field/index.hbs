<Boxel::Field
  @fieldId={{@id}}
  @label={{@label}}
  @labelClass={{@labelClass}}
  @fieldMode={{@fieldMode}}
>
  {{#if (eq @fieldMode "edit")}}
    <Boxel::Input
      @type="text"
      @id={{@id}}
      @value={{@value}}
      @onInput={{@onInput}}
      @disabled={{@disabled}}
      @required={{@required}}
      @optional={{@optional}}
      @invalid={{@invalid}}
      @helperText={{@helperText}}
      @errorMessage={{@errorMessage}}
      ...attributes
    />
  {{else}}
    {{@value}}
  {{/if}}
</Boxel::Field>