<Freestyle::Usage @name="TextField">
  <:example>
    <Boxel::TextField
      @id={{this.id}}
      @value={{this.value}}
      @label={{this.label}}
      @labelClass={{this.labelClass}}
      @fieldMode={{this.mode}}
      @onInput={{@onInput}}
      @disabled={{this.disabled}}
      @required={{this.required}}
    />
  </:example>
  <:api as |Args|>
    <Args.String
      @name="fieldMode"
      @description="field mode"
      @value={{this.mode}}
      @options={{w "view edit"}}
      @defaultValue="view"
      @onInput={{fn (mut this.mode)}}
    />
    <Args.String
      @name="id"
      @description="optional field id"
      @value={{this.id}}
      @onInput={{fn (mut this.id)}}
    />
    <Args.String
      @name="value"
      @value={{this.value}}
      @onInput={{fn (mut this.value)}}
    />
    <Args.String
      @name="label"
      @description="field label"
      @value={{this.label}}
      @onInput={{fn (mut this.label)}}
    />
    <Args.String
      @name="labelClass"
      @description="optional css class name for the field label"
      @value={{this.labelClass}}
      @onInput={{fn (mut this.labelClass)}}
    />
    <Args.Bool
      @name="disabled"
      @value={{this.disabled}}
      @onInput={{fn (mut this.disabled)}}
    />
    <Args.Bool
      @name="required"
      @value={{this.required}}
      @onInput={{fn (mut this.required)}}
    />
    <Args.Action
      @name="onInput"
      @description="Function to update the passed in value"
    />
  </:api>
</Freestyle::Usage>