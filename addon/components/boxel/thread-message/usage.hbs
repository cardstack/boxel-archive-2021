<Freestyle::Usage
  @name="ThreadMessage"
>
  <:example>
    <Boxel::ThreadMessage
      @name={{this.name}}
      @imgURL={{this.imgURL}}
      @content={{this.content}}
      @iconSize={{this.iconSize}}
      @isRound={{this.isRound}}
      @datetime={{this.datetime}}
    />
  </:example>
  <:api as |Args|>
    <Args.String
      @name="content"
      @description="Message content. Can be a string or an array of strings"
      @required={{true}}
      @value={{this.content}}
      @onInput={{fn (mut this.content)}}
    />
    <Args.String
      @name="imgURL"
      @description="URL for the user image icon"
      @defaultValue="Placeholder icon"
      @value={{this.imgURL}}
      @onInput={{fn (mut this.imgURL)}}
    />
    <Args.String
      @name="datetime"
      @description="Message timestamp"
      @defaultValue="(now)"
      @value="(now)"
    />
    <Args.String
      @name="name"
      @description="Optional username display above the message"
      @value={{this.name}}
      @onInput={{fn (mut this.name)}}
    />
    <Args.String
      @name="iconSize"
      @description="Optional icon size in any unit"
      @value={{this.iconSize}}
      @defaultValue="2.5rem"
      @onInput={{fn (mut this.iconSize)}}
    />
    <Args.Bool
      @name="isRound"
      @value={{this.isRound}}
      @description="Makes the icon circular"
      @defaultValue={{false}}
      @onInput={{fn (mut this.isRound)}}
    />
  </:api>
</Freestyle::Usage>

<Freestyle::Usage
  @slug="ThreadMessage-array"
>
  <:example>
    <Boxel::ThreadMessage
      @content={{this.messageArray}}
      @imgURL={{this.botImg}}
      @datetime={{this.datetime}}
    />
  </:example>
  <:api as |Args|>
    <Args.Array
      @name="content"
      @type="String"
      @description="Message content. Can be a string or an array of strings"
      @required={{true}}
      @items={{this.messageArray}}
      @onChange={{fn (mut this.messageArray)}}
    />
    <Args.String
      @name="imgURL"
      @description="URL for the image icon"
      @defaultValue="Placeholder icon"
      @value={{this.botImg}}
      @onInput={{fn (mut this.botImg)}}
    />
    <Args.String
      @name="datetime"
      @description="Message timestamp"
      @defaultValue="(now)"
      @value={{this.datetime}}
      @onInput={{fn (mut this.datetime)}}
    />
  </:api>
</Freestyle::Usage>