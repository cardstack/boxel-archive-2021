{{#if (eq @mode "edit")}}
  <Boxel::Field::Edit
    @label={{@label}}
    @labelSize={{@labelSize}}
    @labelColor={{@labelColor}}
    @labelCase={{@labelCase}}
    ...attributes
  >
    {{yield}}
  </Boxel::Field::Edit>
{{else}}
  <Boxel::Field::View
    @label={{@label}}
    @labelSize={{@labelSize}}
    @labelColor={{@labelColor}}
    @labelCase={{@labelCase}}
    ...attributes
  >
    {{yield}}
  </Boxel::Field::View>
{{/if}}