<Freestyle::Usage @name="Field">
  <:example>
    <Boxel::Field
      @label={{this.label}}
      @labelClass={{this.labelClass}}
      @mode={{this.mode}}
      style={{css-var boxel-field-label-width=this.labelWidth}}
    >
      {{#if (eq this.mode "edit")}}
        <Boxel::Input
          @value={{this.value}}
          @onInput={{this.onInput}}
        />
      {{else}}
        {{this.value}}
      {{/if}}
    </Boxel::Field>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="mode"
      @description="field mode"
      @value={{this.mode}}
      @options={{w "view edit"}}
      @defaultValue="view"
      @onInput={{fn (mut this.mode)}}
    />
    <Args.String
      @name="label"
      @description="field label"
      @value={{this.label}}
      @onInput={{fn (mut this.label)}}
    />
    <Args.String
      @name="labelClass"
      @description="optional css class name for the field label"
      @value={{this.labelClass}}
      @onInput={{fn (mut this.labelClass)}}
    />
    <Args.String
      @name="--boxel-field-label-width"
      @description="css variable for the width of the label column"
      @value={{this.labelWidth}}
      @onInput={{fn (mut this.labelWidth)}}
    />
    <Args.Yield
      @description="Yield value or form field"
    />
  </:api>
</Freestyle::Usage>