<Freestyle::Usage @name="Field">
  <:example>
    <Boxel::Field
      @mode={{this.mode}}
      @label={{this.label}}
      @labelSize={{this.labelSize}}
      @labelColor={{this.labelColor}}
      @labelCase={{this.labelCase}}
    >
      {{#if (eq this.mode "edit")}}
        <Boxel::Input
          @value={{this.value}}
          @onInput={{this.onInput}}
        />
      {{else}}
        {{this.value}}
      {{/if}}
    </Boxel::Field>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="mode"
      @description="field mode"
      @value={{this.mode}}
      @options={{w "view edit"}}
      @defaultValue="view"
      @onInput={{fn (mut this.mode)}}
    />
    <Args.String
      @name="label"
      @description="field label"
      @value={{this.label}}
      @onInput={{fn (mut this.label)}}
    />
    <Args.String
      @name="labelSize"
      @description="label font size options"
      @value={{this.labelSize}}
      @options={{w "default large"}}
      @onInput={{fn (mut this.labelSize)}}
    />
    <Args.String
      @name="labelColor"
      @description="label color options"
      @value={{this.labelColor}}
      @options={{w "default dark medium-dark"}}
      @onInput={{fn (mut this.labelColor)}}
    />
    <Args.String
      @name="labelCase"
      @description="label text casing"
      @value={{this.labelCase}}
      @options={{w "default lowercase"}}
      @onInput={{fn (mut this.labelCase)}}
    />
    <Args.Yield
      @description="Yield value or form field"
    />
  </:api>
</Freestyle::Usage>