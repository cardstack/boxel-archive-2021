<Freestyle::Usage @name="Form Field">
  <:example>
    <Boxel::Field
      @label={{this.label}}
      @isFlexField={{this.isFlexField}}
      @labelClass={{this.labelClass}}
    >
      <Boxel::Input
        @value={{this.value}}
        @updateValue={{this.updateValue}}
      />
    </Boxel::Field>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="label"
      @description="field label"
      @value={{this.label}}
      @onInput={{fn (mut this.label)}}
    />
    <Args.Bool
      @name="isFlexField"
      @description="Layout styling"
      @defaultValue="false"
      @optional={{true}}
      @value={{this.isFlexField}}
      @onInput={{fn (mut this.isFlexField)}}
    />
    <Args.String
      @name="labelClass"
      @description="css class name for the label element"
      @value={{this.labelClass}}
      @optional={{true}}
      @onInput={{fn (mut this.labelClass)}}
    />
    <Args.Yield
      @description="Yield value or form field"
    />
  </:api>
</Freestyle::Usage>