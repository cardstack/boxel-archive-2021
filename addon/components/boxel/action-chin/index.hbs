<footer
  class={{cn
    "boxel-action-chin"
    boxel-action-chin--light=this.isMemorializedMode
    boxel-action-chin--dark=this.isDataEntryMode
  }}
  ...attributes
>
  <Boxel::Button
    @kind={{if this.isDataEntryMode "primary"}}
    @disabled={{@disabled}}
    {{on "click" (optional @onClickButton)}}
  >
    {{@buttonText}}
  </Boxel::Button>
  <span class="boxel-action-chin__lock-text">
    Actions only visible to you
    {{svg-jar "lock" width="12px" height="12px"}}
  </span>
</footer>