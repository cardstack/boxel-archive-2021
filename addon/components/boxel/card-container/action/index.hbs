<Boxel::CardContainer
  @displayHeader={{true}}
  @header={{@header}}
  @headerClass="boxel-action-container__header"
  @hasContextMenu={{true}}
  @expandable={{true}}
  class={{cn
    "boxel-action-container"
    boxel-action-container--is-complete=@isComplete
  }}
  data-test-boxel-action-container
  ...attributes
>
  {{#if @prompt}}
    <p class="boxel-action-container__prompt">
      {{@prompt}}
    </p>
  {{/if}}

  {{yield}}

  <Boxel::ActionChin
    class="boxel-action-container__footer"
    @mode={{if @isComplete "memorialized" "data-entry"}}
    @buttonText={{if @isComplete @completeActionLabel @incompleteActionLabel}}
    @onClickButton={{@onClickButton}}
    @disabled={{@disabled}}
  />
</Boxel::CardContainer>