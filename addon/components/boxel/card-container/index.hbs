<div class={{cn
    "boxel-card-container"
    boxel-card-container--selected=@isSelected
    boxel-card-container--boundaries=@displayCardBoundaries
  }}
  data-test-boxel-card-container
  ...attributes
>
  {{#if @displayHeader}}
    <Boxel::Header
      class="boxel-card-container__header"
      @header={{@header}}
      @selectAction={{@selectAction}}
      @selectionHeader={{@selectionHeader}}
      @isSelected={{@isSelected}}
      @editable={{@editable}}
      @hasContextMenu={{@hasContextMenu}}
      @expandable={{@expandable}}
      @noBackground={{@noHeaderBackground}}
    />
  {{/if}}

  <div class={{cn
      "boxel-card-container__content"
      boxel-card-container__content--with-header=@displayHeader
    }}
  >
    {{yield}}
  </div>
</div>