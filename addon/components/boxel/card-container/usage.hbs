<Freestyle::Usage @name="CardContainer">
  <:description>
    Container for an embedded card.
  </:description>

  <:example>
    <Boxel::CardContainer
      @displayHeader={{this.displayHeader}}
      @displayCardBoundaries={{this.displayBoundaries}}
      @header={{this.header}}
      @selectAction={{@selectAction}}
      @selectionHeader={{this.selectionHeader}}
      @isSelected={{this.isSelected}}
      @editable={{this.editable}}
      @hasContextMenu={{this.hasContextMenu}}
      @expandable={{this.expandable}}
      @noHeaderBackground={{this.noHeaderBackground}}
    >
      <div>
        Card Here
      </div>
    </Boxel::CardContainer>
  </:example>

  <:api as |Args|>
    <Args.Bool
      @name="displayHeader"
      @description="if true, card header will be visible"
      @defaultValue={{false}}
      @value={{this.displayHeader}}
      @onInput={{fn (mut this.displayHeader)}}
    />
    <Args.Bool
      @name="displayBoundaries"
      @description="if true, card borders will be visible"
      @defaultValue={{false}}
      @value={{this.displayBoundaries}}
      @onInput={{fn (mut this.displayBoundaries)}}
    />
    <Args.String
      @name="header"
      @description="header text"
      @value={{this.header}}
      @onInput={{fn (mut this.header)}}
    />
    <Args.Bool
      @name="selectionHeader"
      @description="header label is a button"
      @defaultValue={{false}}
      @value={{this.selectionHeader}}
      @onInput={{fn (mut this.selectionHeader)}}
    />
    <Args.Bool
      @name="isSelected"
      @description="header is selected (use with `selectionHeader` arg for semantic ui)"
      @defaultValue={{false}}
      @value={{this.isSelected}}
      @onInput={{fn (mut this.isSelected)}}
    />
    <Args.Bool
      @name="editable"
      @description="display 'edit' button on the header"
      @defaultValue={{false}}
      @value={{this.editable}}
      @onInput={{fn (mut this.editable)}}
    />
    <Args.Bool
      @name="hasContextMenu"
      @description="header has 'more actions' dropdown menu"
      @defaultValue={{false}}
      @value={{this.hasContextMenu}}
      @onInput={{fn (mut this.hasContextMenu)}}
    />
    <Args.Bool
      @name="expandable"
      @description="display expand button on the header"
      @defaultValue={{false}}
      @value={{this.expandable}}
      @onInput={{fn (mut this.expandable)}}
    />
    <Args.Bool
      @name="noHeaderBackground"
      @description="card header does not have background color"
      @defaultValue={{false}}
      @value={{this.noHeaderBackground}}
      @onInput={{fn (mut this.noHeaderBackground)}}
    />
    <Args.Action
      @name="selectAction"
      @description="action to take when container is selected"
    />
    <Args.Yield
      @optional={{true}}
      @description="Unstyled area for custom card content and fields"
    />
  </:api>
</Freestyle::Usage>