<Freestyle::Usage @name="BoxelHeader">
  <:description>
    Usually shown at the top of card containers
  </:description>
  <:example>
    <Boxel::Header
      @header={{this.header}}
      @selectionHeader={{this.selectionHeader}}
      @isSelected={{this.isSelected}}
      @editable={{this.editable}}
      @hasContextMenu={{this.hasContextMenu}}
      @expandable={{this.expandable}}
      @noBackground={{this.noBackground}}
    />
  </:example>
  <:api as |Args|>
    <Args.String
      @name="header"
      @description="header text"
      @value={{this.header}}
      @onInput={{fn (mut this.header)}}
    />
    <Args.Bool
      @name="selectionHeader"
      @description="header label is a button"
      @defaultValue={{false}}
      @value={{this.selectionHeader}}
      @onInput={{fn (mut this.selectionHeader)}}
    />
    <Args.Bool
      @name="isSelected"
      @description="header is selected (use with `selectionHeader` arg for semantic ui)"
      @defaultValue={{false}}
      @value={{this.isSelected}}
      @onInput={{fn (mut this.isSelected)}}
    />
    <Args.Bool
      @name="editable"
      @description="display 'edit' button on the header"
      @defaultValue={{false}}
      @value={{this.editable}}
      @onInput={{fn (mut this.editable)}}
    />
    <Args.Bool
      @name="hasContextMenu"
      @description="header has 'more actions' dropdown menu"
      @defaultValue={{false}}
      @value={{this.hasContextMenu}}
      @onInput={{fn (mut this.hasContextMenu)}}
    />
    <Args.Bool
      @name="expandable"
      @description="display expand button on the header"
      @defaultValue={{false}}
      @value={{this.expandable}}
      @onInput={{fn (mut this.expandable)}}
    />
    <Args.Bool
      @name="noBackground"
      @description="card header does not have background color"
      @defaultValue={{false}}
      @value={{this.noBackground}}
      @onInput={{fn (mut this.noBackground)}}
    />
  </:api>
</Freestyle::Usage>