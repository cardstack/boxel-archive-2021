<Freestyle::Usage @name="NextStepsBox">
  <:example>
    <Boxel::NextStepsBox>
      <:default>
          {{#each 
            (array 
              "Transfer Prepaid Card" 
              "Create new Prepaid Card" 
              "Split Prepaid Card" 
              "Use as template for new Prepaid Card"
            )
           as |item|}}
            <Boxel::Button @kind="primary">
              {{item}}
            </Boxel::Button>
          {{/each}}
      </:default>
      <:footer>
        <Boxel::Button @kind="secondary-dark">
          Return to dashboard
        </Boxel::Button>
      </:footer>
    </Boxel::NextStepsBox>
  </:example>

  <:api as |Args|>
    <Args.Yield
      @name="default"
      @description="Yields the body of this box. Its contents are arranged in a cluster/flex wrapped layout "
    />
    <Args.Yield
      @name="footer"
      @description="Yields footer block"
    />
  </:api>
</Freestyle::Usage>
