{{#if @isOpen}}
  {{set-body-class "has-modal"}}
  {{on-key "Escape" @onClose event="keydown"}}

  <button
    type="button"
    {{on "click" @onClose}}
    class="boxel-modal-overlay {{@overlayClass}}"
    tabindex="-1"
  >
    <span class="boxel-sr-only">Close modal</span>
  </button>

  <dialog
    class="boxel-modal"
    open={{@isOpen}}
    aria-modal="true"
    ...attributes
  >
    <div class="boxel-modal__inner">
      {{yield}}
    </div>
  </dialog>
{{/if}}