{{#if @content}}
  {{#if (eq @format "thumbnail")}}
    <article class="boxel boxel-thumbnail" data-test-boxel>
      <div class="boxel-thumbnail--image">
        <img src={{@content.imageUrl}} alt={{@content.altText}}>
      </div>
      <section class="boxel-thumbnail--text">
        <h3>{{@content.title}}</h3>
        <p>{{@content.description}}</p>
      </section>
    </article>
  {{else}}
    <div class="boxel {{if contentType (concat "boxel-" contentType "-" @format)}}" ...attributes data-test-boxel>
      {{#if (is-component contentType)}}
        {{component contentType content=@content format=@format}}
      {{else}}
        A {{contentType}} component/template must be provided
      {{/if}}
    </div>
  {{/if}}
{{else}}
  <div class="boxel boxel-default" ...attributes data-test-boxel>
    {{yield}}
  </div>
{{/if}}