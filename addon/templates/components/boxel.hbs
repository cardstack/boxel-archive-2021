<div class="boxel {{if contentType (concat "boxel-" contentType)}}" role="button" {{action clickAction}}>
  {{#if (has-block)}}
    {{yield}}
  {{else if content}}
    {{#if (is-component contentType)}}
      {{component contentType content=content}}
    {{else}}
      A {{contentType}} component/template must be provided
    {{/if}}
  {{/if}}
</div>