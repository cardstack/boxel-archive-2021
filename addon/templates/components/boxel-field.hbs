<AnimatedContainer class="boxel-field-schema-container {{model.mode}}">
  {{#animated-if (eq @mode "schema") use=fade}}
    <div class="{{model.constructor.modelName}}--{{@mode}}--field-type field-type">Text Field</div>
  {{/animated-if}}
</AnimatedContainer>
{{component
    (concat "field-modes/" this.mode)
    componentName=componentName
    fieldName=fieldName
    value=value
    label=label
    mode=this.mode
    defaultTransition=this.defaultTransition
}}
