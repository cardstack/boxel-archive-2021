<AnimatedContainer class="editable-field-schema-container {{model.mode}}">
  {{#animated-if (eq @mode "schema") use=fade}}
    <div class="field-type">Text Field</div>
  {{/animated-if}}
</AnimatedContainer>
{{component
    (concat "field-modes/" model.mode)
    componentName=componentName
    fieldName=fieldName
    value=value
    label=label
    mode=model.mode
    defaultTransition=this.defaultTransition
}}
