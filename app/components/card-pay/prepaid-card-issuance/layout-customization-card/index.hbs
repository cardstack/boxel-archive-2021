<Boxel::ActionContainer
  @header="Layout Customization"
  @prompt="Customize the layout of your Prepaid Card"
  @incompleteActionLabel="Save Layout"
  @completeActionLabel="Edit Layout"
  @isComplete={{@isComplete}}
  @onClickButton={{@onClickButton}}
>
  {{#if @isComplete}}
    <CardPay::PrepaidCardIssuance::LayoutCustomizationCard::DisplayView
      @issuerName={{@issuerName}}
      @headerColor={{@headerColor}}
      @headerPattern={{@headerPattern}}
    />
  {{else}}
    <CardPay::PrepaidCardIssuance::LayoutCustomizationCard::FormView
      @issuerName={{@issuerName}}
      @updateIssuerName={{@updateIssuerName}}
      @colorOptions={{@colorOptions}}
      @headerColor={{@headerColor}}
      @patternOptions={{@patternOptions}}
      @updateHeaderColor={{@updateHeaderColor}}
      @headerPattern={{@headerPattern}}
      @updateHeaderPattern={{@updateHeaderPattern}}
    />
  {{/if}}
</Boxel::ActionContainer>