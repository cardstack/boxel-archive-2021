<Freestyle::Usage @name="ParticipantsBox">
  <:example>
    <Boxel::ParticipantsBox @addAction={{this.addAction}}>
      <Boxel::ParticipantList
        @participants={{this.sampleParticipantGroup}}
      />
    </Boxel::ParticipantsBox>
  </:example>
  <:api as |Args|>
    <Args.Action
      @name="addAction"
      @value={{this.addAction}}
      @defaultValue="null"
      @description="When passed, the `Add Participant` button is shown"
    />
    <Args.Yield
      @description="The contents of the box, typically one or more `Boxel::ParticipantsList` components"
    />
  </:api>
</Freestyle::Usage>

