<section class="thread" ...attributes>
  <div class="thread__sticky-container">
    {{yield (hash
      header=(component 'boxel/thread/header')
    )}}
  </div>

  <section class="thread__content-wrapper">
    <div class="thread__scroll-wrapper">
      <div class="thread__sticky-container">
        {{yield (hash
          taskbar=(component 'boxel/thread/taskbar')
        )}}
      </div>
      <section class="thread__content">
        {{yield (hash
          content=(component 'boxel/thread/content')
        )}}
      </section>
    </div>

    <div class="thread__scroll-wrapper">
      <aside class="thread__sidebar">
        {{yield (hash
          sidebar=(component 'boxel/thread/sidebar')
        )}}
      </aside>
    </div>
  </section>
</section>


