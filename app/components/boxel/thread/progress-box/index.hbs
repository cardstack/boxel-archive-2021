<Boxel::Thread::SidebarCard ...attributes as |c|>
  <c.section @title={{or (html-safe (concat "Workflow:<br>" @title)) "Workflow Progress"}}>
    <Boxel::ProgressCircle
      @size={{@size}}
      @percentComplete={{@percentComplete}}
    />
    <div class="progress-box__status">
      {{@status}}
    </div>
  </c.section>
  <c.section @title="Milestones">
    <Boxel::Milestones
      @milestones={{@milestones}}
      @completedCount={{@completedCount}}
    />
  </c.section>
</Boxel::Thread::SidebarCard>