<Boxel::Thread::SidebarCard as |c|>
  <c.section @title={{@progressCircleTitle}}>
    {{yield (hash
      progressCircle=(component 'boxel/progress-circle')
    )}}
    <div class="progress-pie__status">
      {{@status}}
    </div>
  </c.section>
  <c.section @title={{@milestonesTitle}}>
    {{yield (hash
      milestones=(component 'boxel/milestones')
    )}}
  </c.section>
</Boxel::Thread::SidebarCard>