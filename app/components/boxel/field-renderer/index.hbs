{{#if (eq @mode "edit")}}
  <Boxel::FieldRenderer::Edit
    @field={{@field}}
    @expandAction={{@expandAction}}
    @class={{@class}}
    ...attributes
  />
{{else if (eq @mode "comparison")}}
  <Boxel::FieldRenderer::Comparison
    @field={{@field}}
    @expandAction={{@expandAction}}
    @class={{@class}}

    @title={{@title}}
    @showCompHighlights={{@showCompHighlights}}
    @comparisonType={{@comparisonType}}
    @omittedFields={{@omittedFields}}

    ...attributes
  />
{{else}}
  <Boxel::FieldRenderer::View
    @field={{@field}}
    @expandAction={{@expandAction}}
    @class={{@class}}

    @addedFields={{@addedFields}}
    @addedValues={{@addedValues}}
    @modifiedValues={{@modifiedValues}}
    @removedFields={{@removedFields}}
    @changedFields={{@changedFields}}
    @removedValues={{@removedValues}}
    @addedCards={{@addedCards}}
    @removedCards={{@removedCards}}
    @changedCards={{@changedCards}}
    @modifiedCard={{@modifiedCard}}
    @modifiedCards={{@modifiedCards}}
    @comparisonMode={{@comparisonMode}}

    ...attributes
  />{{/if}}