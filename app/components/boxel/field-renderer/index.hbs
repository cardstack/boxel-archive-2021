{{#if (eq @mode "edit")}}
  <Boxel::FieldRenderer::Edit
    @field={{@field}}
    @expandAction={{@expandAction}}
    @class={{@class}}
    ...attributes
  />
{{else if (eq @mode "comparison")}}
  <Boxel::FieldRenderer::Comparison
    @field={{@field}}
    @expandAction={{@expandAction}}
    @class={{@class}}

    @title={{@title}}
    @showCompHighlights={{@showCompHighlights}}
    @comparisonType={{@comparisonType}}
    @omittedFields={{@omittedFields}}

    ...attributes
  />
{{else}}
  <Boxel::FieldRenderer::View
    @field={{@field}}
    @expandAction={{@expandAction}}
    @class={{@class}}
    @comparison={{@comparison}}
    @comparisonMode={{@comparisonMode}}

    ...attributes
  />{{/if}}