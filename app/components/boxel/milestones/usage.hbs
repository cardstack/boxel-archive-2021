<Freestyle::Usage
  @slug="milestones"
  @description="The current step will appear in bold, while the completed steps get a checkmark."
>
  <:example>
    <Boxel::Milestones
      @milestones={{this.milestones}}
      @completedCount={{this.completedCount}}
    />
  </:example>
  <:api as |Args|>
    <Args.Object
      @name="milestones"
      @value={{this.milestones}}
      @description="(object array) — Each object should have a `title` property with title of the milestone."
    />
    <Args.Number
      @name="completedCount"
      @value={{this.completedCount}}
      @defaultValue={{0}}
      @min={{0}}
      @max={{4}}
      @description="(integer) — Number of milestones completed."
      @onInput={{fn (mut this.completedCount)}}
    />
  </:api>
</Freestyle::Usage>
