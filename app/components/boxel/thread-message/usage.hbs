<Freestyle::Usage
  @name="ThreadMessage"
>
  <:example>
    <Boxel::ThreadMessage
      @senderName={{this.senderName}}
      @senderImage={{this.senderImage}}
      @contents={{this.contents}}
      @content={{this.content}}
      @iconSize={{this.iconSize}}
      @hasLogo={{this.hasLogo}}
      @datetime={{this.datetime}}
    />
  </:example>
  <:api as |Args|>
    <Args.String
      @name="senderName"
      @description="Name of the user who sent this message"
      @defaultValue={{null}}
      @value={{this.senderName}}
      @onInput={{fn (mut this.senderName)}}
    />
    <Args.String
      @name="senderImage"
      @description="URL of the profile pic of the sender"
      @defaultValue="URL of the profile placeholder icon, or if @hasLogo is true, true, the Cardbot icon"
      @value={{this.senderImage}}
      @onInput={{fn (mut this.senderImage)}}
    />
    <Args.Array
      @name="contents"
      @type="String"
      @description="(string array) string messages, revealed in an animated way, takes precedence over @content (singular) if both are defined"
      @items={{this.contents}}
      @onChange={{fn (mut this.contents)}}
    />
    <Args.String
      @name="content"
      @description="(string) body of the message, will not be shown if @contents (plural) is present"
      @value={{this.content}}
      @onInput={{fn (mut this.content)}}
    />
    <Args.Number
      @name="iconSize"
      @description="(integer) — Size of the icon."
      @value={{this.iconSize}}
      @defaultValue={{40}}
      @min={{10}}
      @max={{80}}
      @onInput={{fn (mut this.iconSize)}}
    />
    <Args.Bool
      @name="hasLogo"
      @value={{this.hasLogo}}
      @description="If true, alternative styling is applied to the image."
      @defaultValue={{false}}
      @onInput={{fn (mut this.hasLogo)}}
    />
    <Args.String
      @name="datetime"
      @description="(datetime) Message timestamp"
      @defaultValue="now"
      @value={{this.datetime}}
      @onInput={{fn (mut this.datetime)}}
    />
  </:api>
</Freestyle::Usage>


<Freestyle::Usage
  @slug="ThreadMessage-contents"
  @description="Using with `@contents` will display messages in the array in an animated way."
>
  <:example>
    <Boxel::ThreadMessage
      @contents={{array
        "Hello, it’s nice to see you!"
        "Let’s issue a Prepaid Card."
        "First, you can choose the look and feel of your card, so that your customers and other users recognize that this Prepaid Card came from you."
      }}
      @hasLogo={{true}}
      @datetime="2020-03-07T10:11"
    />
  </:example>
</Freestyle::Usage>

<Freestyle::Usage
  @slug="ThreadMessage-with-logo"
  @description="Using with uploaded `@logo`"
>
  <:example>
    <Boxel::ThreadMessage
      @senderName="Home Sweet Home"
      @senderImage={{this.HSHIcon}}
      @content="You have placed an order for an item that requires a manual inventory check. Your credit card has not been charged. If the products are in stock, we will reserve them for you and proceed to the payment process. You will receive status updates via email and in this thread."
      @hasLogo={{true}}
    />
  </:example>
</Freestyle::Usage>

<Freestyle::Usage
  @slug="ThreadMessage-with-content"
  @description="Using with `@content`"
>
  <:example>
    <Boxel::ThreadMessage
      @senderName="Lola Sampson"
      @senderImage={{this.LolaSampsonThumb}}
      @content="Hi Haley, Here’s your manuscript with all the edits I would recommend. Please review and let me know if you have any questions. I also added a couple tasks for you about things you should think about, as you figure out the rest of your story."
    />
  </:example>
</Freestyle::Usage>

