<Freestyle::Usage @name="MilestoneProgress" @description="Combines `Boxel::Milestones` and `Boxel::ProgressCircle` components stacked and ready for use in a sidebar.">
  <:example>
    <Doc::DemoStage @width="230px" @paddingX="0px" @paddingY="0px">
      <Boxel::MilestoneProgress
        @title={{this.title}}
        @status={{this.status}}
        @size={{this.size}}
        @milestones={{this.milestones}}
        @completedCount={{this.completedCount}}
      />
    </Doc::DemoStage>
  </:example>
  <:api as |Args|>
    <Args.String
      @name="title"
      @description="Title of the workflow"
      @defaultValue="Workflow Progress"
      @value={{this.title}}
      @onInput={{fn (mut this.title)}}
    />
    <Args.String
      @name="status"
      @description="Latest milestone achieved or progress status description. Appears under the ProgressCircle."
      @value={{this.status}}
      @onInput={{fn (mut this.status)}}
    />
    <Args.Number
      @name="size"
      @description="(integer) — Size of `Boxel::ProgressCircle`."
      @value={{this.size}}
      @defaultValue={{120}}
      @min={{20}}
      @max={{190}}
      @onInput={{fn (mut this.size)}}
    />
    <Args.Number
      @name="completedCount"
      @description="(integer) — number of milestones completed"
      @value={{this.completedCount}}
      @defaultValue={{2}}
      @min={{0}}
      @max={{this.milestones.length}}
      @onInput={{fn (mut this.completedCount)}}
    />
    <Args.Array
      @name="milestones"
      @type="Object"
      @items={{this.milestones}}
      @description="Array of milestones, each with a `title` property."
      @onChange={{fn (mut this.milestones)}}
    />
  </:api>
</Freestyle::Usage>