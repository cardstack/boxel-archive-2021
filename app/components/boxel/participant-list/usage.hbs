<FreestyleAnnotation @slug="participant-list">
  <ul>
    <li><code>@participants</code> (array of <code>Participant</code>s)</li>
    <li><code>@fanned</code> (boolean) — Displays icons in a fanned out style.</li>
    <li><code>@iconSize</code> (integer) — Height and width of each item's icon. Default is 30px.</li>
    <li><code>@iconOnly</code> (boolean) — Displays icon only. Set to true if <code>@fanned</code> returns true.</li>
    <li><code>@hasLogo</code> (boolean) — Different styling is applied to the image.</li>
    <li><code>@maxCount</code> (integer) — Max number of items to display. Default is 5.</li>
  </ul>
  <p>
    A <code>Participant</code> object may have <code>title</code>, <code>role</code>, <code>imgURL</code>, and <code>type</code> fields.
  </p>

  <div>
    @iconSize
    <input
      type="range"
      min={{25}}
      max={{80}}
      step={{1}}
      value={{this.iconSize}}
      {{on 'input' (pick 'target.value' (fn (mut this.iconSize)))}}
    /> ({{this.iconSize}}px)
  </div>
  <div>
     @maxCount
    <input
      type="range"
      min={{1}}
      max={{this.sampleParticipants.length}}
      step={{1}}
      value={{this.maxCount}}
      {{on 'input' (pick 'target.value' (fn (mut this.maxCount)))}}
    /> ({{this.maxCount}})
  </div>
</FreestyleAnnotation>

<FreestyleUsage @slug="participant-list">
  <Boxel::ParticipantList
    @participants={{this.sampleParticipants}}
    @maxCount={{this.maxCount}}
    @iconSize={{this.iconSize}}
  />
</FreestyleUsage>

