<Freestyle::Usage @name="Participant">
  <:example>
    <Boxel::Participant
      @title={{this.title}}
      @description={{this.description}}
      @image={{this.image}}
      @iconSize={{this.iconSize}}
      @iconOnly={{this.iconOnly}}
      @hasLogo={{this.hasLogo}}
    />
  </:example>
  <:api as |Args|>
    <Args.String
      @name="title"
      @value={{this.title}}
      @onInput={{fn (mut this.title)}}
    />
    <Args.String
      @name="description"
      @value={{this.description}}
      @onInput={{fn (mut this.description)}}
    />
    <Args.String
      @name="image"
      @description="(url string) — Defaults to generic profile icon."
      @value={{this.image}}
      @onInput={{fn (mut this.image)}}
    />
    <Args.Number
      @name="iconSize"
      @description="(integer) — Height and width of the image."
      @value={{this.iconSize}}
      @defaultValue={{30}}
      @min={{25}}
      @max={{80}}
      @onInput={{fn (mut this.iconSize)}}
    />
    <Args.Bool
      @name="iconOnly"
      @value={{this.iconOnly}}
      @description="If true, displays the icon only."
      @defaultValue={{false}}
      @onInput={{fn (mut this.iconOnly)}}
    />
    <Args.Bool
      @name="hasLogo"
      @value={{this.hasLogo}}
      @description="If true, alternative styling is applied."
      @defaultValue={{false}}
      @onInput={{fn (mut this.hasLogo)}}
    />
  </:api>
</Freestyle::Usage>

