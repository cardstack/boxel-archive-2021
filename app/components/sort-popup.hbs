{{#if @sortColumns.length}}
  <Boxel::DropdownButton class="sort-popup {{@class}}" @button="sort" @icon="sort" @size={{30}}>
    <header>Sort by</header>
    <ul>
      {{#each @sortColumns as |column|}}
        <SortPopup::Item @sort={{@sort}} @column={{column}} @direction="asc" @sortColumn={{@sortColumn}} @sortDirection={{@sortDirection}}/>
        <SortPopup::Item @sort={{@sort}} @column={{column}} @direction="desc" @sortColumn={{@sortColumn}} @sortDirection={{@sortDirection}}/>
      {{/each}}
    </ul>
  </Boxel::DropdownButton>
{{/if}}
