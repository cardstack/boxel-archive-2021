<article class="collection-card collection-card--{{@type}} collection-card--{{@format}}-item">
  {{!-- <button {{on "click" (if @togglePin (fn @togglePin @item))}} class="master-collection__pin-btn {{if @item.pinned "pinned"}}" aria-label="pin">{{svg-jar "pin" width="22px" height="22px"}}</button> --}}

  {{!-- {{#if (eq @format "list")}}
    <PlayButton @class="collection__play-btn collection__play-btn--list" @width="30px" @height="30px" />
  {{else}}
    <PlayButton @class="collection__play-btn" @width="60px" @height="60px" />
  {{/if}} --}}

  {{#if @image}}
    <div class="collection-card__image" style={{css-url "background-image" @image}}></div>
  {{/if}}

  <div class="collection-card__text collection-card__text--{{@type}}">
    <h3>{{@title}}</h3>
    <small>{{@description}}</small>
  </div>

  {{#if (eq @format "list")}}
    <ul class="collection-card__list-fields">
      {{#each @listFields as |field|}}
        <li class="collection-card__field">
          <h4>{{field.name}}</h4>
          {{get @item field.valuePath}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    {{#if (or @imageArray @count)}}
      <footer class="collection-card__footer">
        {{#if @imageArray}}
          <Boxel::CoverArt @covers={{@imageArray}} />
        {{/if}}

        {{#if @count}}
          <div class="collection-card__count">
            <div class="collection-card__num">{{@count}}</div>
            <div>{{or @countUnit "Items"}}</div>
          </div>
        {{/if}}
      </footer>
    {{/if}}
  {{/if}}
</article>