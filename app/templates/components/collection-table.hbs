<EmberTable @class="collection-table" as |t|>
  <t.head
    @columns={{@columns}}
    @sorts={{this.sorts}}
    @onUpdateSorts={{action (mut this.sorts)}}
    @class="collection-table__header"
  />
  <h2 class="collection-table__title">Actor Profile Data</h2>
  <t.body
    @rows={{@collection}}
    @rowSelectionMode={{this.rowSelectionMode}}
    @checkboxSelectionMode={{this.checkboxSelectionMode}}
    @onSelect={{action (mut this.selection)}}
    @selection={{this.selection}}
    @estimateRowHeight={{60}}
    @class="collection-table__body" as |b|
  >
    <b.row as |r|>
      <r.cell as |cell column row cellMeta columnMeta rowMeta|>
        <BoxelHighlight @on={{rowMeta.isSelected}} {{on "click" (fn this.itemSelect row.id)}} @class="collection-table__highlight" />
        {{#if (eq (add columnMeta.index 1) b.cells.length columnMeta.index)}}
          <BoxelActions @displayHighlightActions={{and rowMeta.isSelected (not rowMeta.isGroupSelected)}} />
        {{/if}}
        <div class="collection-table__cell {{if rowMeta.isGroupSelected "row-group-selected"}} {{if rowMeta.isSelected "row-selected"}}">
          <div class="collection-table__cell-value">
            {{cell}}
          </div>
        </div>
      </r.cell>
    </b.row>
  </t.body>
</EmberTable>